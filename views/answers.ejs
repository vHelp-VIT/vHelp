<div class="container">
    <div class="questContainer row">
        <% for(let ans of answers){ %>
        <div class="col-sm-12">
            <div class="card w-100" style="margin-top: 14px;">
                <div class="card-body" style="height: auto; margin-bottom: 20px;">
                    <h5 class="card-title"> <%= ans.question %></h5>
                    <% for(let cat of ans.category){ %>
                    <span class="badge badge-light">
                        <%= cat %>
                    </span>
                    <% } %>
                    <p class="card-text">Answered by: anonymous</p>
                    <p>
                        <a data-toggle="collapse" href="#v-<%= ans._id %>" role="button" aria-expanded="false"
                            aria-controls="collapseExample">
                            View Answer
                        </a>
                    </p>
                    <div class="collapse lapse1" id="v-<%= ans._id %>">
                        <%= ans.answer %>
                        <form action="/update_ans/<%= ans._id %>" method="POST">
                            <textarea class="form-control" id="forppp" rows="8"
                                placeholder="add your thoughts here....."
                                name="ans_here"></textarea>
                                <input type="submit" />
                        </form>
                    </div>
                </div>
            </div>
            <!-- <div class="card w-100">
                <div class="card-body">
                    <h5 class="card-title"><b>><%= ans.question %></b></h5>
                    <p style="margin-top:0px; margin-bottom: 0px;"><b>Posted by:</b>_shivansh_goel_</p>
                    <p class="card-text"><%= ans.answer %>
                    </p>
                </div>
            </div> -->
        </div>
        <% } %>
    </div>
</div>
</div>
</div>
